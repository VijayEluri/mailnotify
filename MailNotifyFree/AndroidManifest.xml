<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.assemble.emailnotify" android:versionCode="213"
    android:versionName="2.5">
    <application android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity android:name=".EmailNotifyActivity"
            android:label="@string/app_name" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.assemble.emailnotify.core.EmailNotifyHelpActivity" />
        <activity
            android:name="net.assemble.emailnotify.core.EmailNotifyPreferencesActivity" />
        <activity
            android:name="net.assemble.emailnotify.core.EmailNotifySelectAppActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="net.assemble.emailnotify.core.EmailNotifyLaunchActivity"
            android:theme="@android:style/Theme.Dialog"
            android:exported="true" />
        <activity android:name=".EmailNotifyLaunchActivity"
            android:theme="@android:style/Theme.Dialog"
            android:exported="true" />
        <receiver android:name="net.assemble.emailnotify.core.EmailNotifyReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="net.assemble.emailnotify.core.EmailNotificationReceiver" />
        <activity
            android:name="net.assemble.emailnotify.core.EmailNotificationHistoryActivity" />
        <service android:name="net.assemble.emailnotify.core.EmailNotifyService" />
        <activity android:name="net.orleaf.android.MyLogActivity" />
        <activity android:name="net.orleaf.android.AboutActivity"
            android:theme="@android:style/Theme.Dialog" />

        <!-- AdMob -->
        <meta-data android:value="a14d316803d0e29"
            android:name="ADMOB_PUBLISHER_ID" />
        <activity android:name="com.admob.android.ads.AdMobActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:configChanges="orientation|keyboard|keyboardHidden" />
        <receiver android:name="com.admob.android.ads.analytics.InstallReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

    </application>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-sdk android:minSdkVersion="4" />
</manifest>
