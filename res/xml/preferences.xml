<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preferences_observe">
        <CheckBoxPreference android:key="notification_icon"
            android:summary="@string/pref_notificationicon_summary"
            android:title="@string/pref_notificationicon_title"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_service">
        <CheckBoxPreference android:key="service_omaemn"
            android:summary="@string/pref_service_omaemn_summary"
            android:title="@string/pref_service_omaemn_title"
            android:defaultValue="true" />
        <CheckBoxPreference android:key="service_imode"
            android:summary="@string/pref_service_imode_summary"
            android:title="@string/pref_service_imode_title"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_notification">
        <RingtonePreference android:key="sound"
            android:title="@string/pref_sound_title" android:summary="@string/pref_sound_summary"
            android:defaultValue="content://settings/system/notification_sound"
            android:ringtoneType="notification" />
        <CheckBoxPreference android:key="vibration"
            android:summary="@string/pref_vibration_summary"
            android:title="@string/pref_vibration_title"
            android:defaultValue="true" />
        <ListPreference android:key="vibration_pattern"
            android:title="@string/pref_vibration_pattern_title"
            android:entries="@array/entries_vibration_pattern"
            android:entryValues="@array/entryvalues_vibration_pattern"
            android:defaultValue="0" android:dependency="vibration" />
        <net.assemble.mailnotify.EmailNotifyVibrationLengthPreference
            android:title="@string/pref_vibration_length_title"
            android:key="vibration_length" android:defaultValue="3"
            android:dependency="vibration" />
        <CheckBoxPreference android:key="notify_view"
            android:summary="@string/pref_notify_view_summary"
            android:title="@string/pref_notify_view_title"
            android:defaultValue="true" />
        <CheckBoxPreference android:key="notify_led"
            android:summary="@string/pref_notify_led_summary"
            android:title="@string/pref_notify_led_title"
            android:defaultValue="true" android:dependency="notify_view" />
        <ListPreference android:key="led_color"
            android:title="@string/pref_led_color_title"
            android:entries="@array/entries_led_color"
            android:entryValues="@array/entryvalues_led_color"
            android:defaultValue="ff00ff00" android:dependency="notify_led" />
        <Preference android:summary="@string/pref_launch_app_summary"
            android:title="@string/pref_launch_app_title" android:key="launch_app"
            android:dependency="notify_view" />
        <Preference android:title="@string/notifytest"
            android:key="notifytest" />
    </PreferenceCategory>
</PreferenceScreen>
