                </PreferenceCategory>
                <PreferenceCategory android:title="@string/pref_group_notify_test">
                    <Preference android:key="test_notify_mopera"
                        android:title="@string/test_notify" />
                </PreferenceCategory>
            </PreferenceScreen>

