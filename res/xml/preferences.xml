<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preferences_notification">
        <RingtonePreference android:key="sound"
            android:title="@string/pref_sound_title" android:summary="@string/pref_sound_summary"
            android:ringtoneType="notification"
            android:defaultValue="content://settings/system/notification_sound" />
        <CheckBoxPreference android:key="vibration"
            android:summary="@string/pref_vibration_summary"
            android:title="@string/pref_vibration_title"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences">
        <CheckBoxPreference android:key="kill_email"
            android:summary="@string/pref_kill_email_summary"
            android:title="@string/pref_kill_email_title" />
        <Preference android:summary="@string/pref_launch_app_summary"
            android:title="@string/pref_launch_app_title" android:key="launch_app" />
        <ListPreference android:title="@string/pref_polling_interval_title"
            android:summary="@string/pref_polling_interval_summary"
            android:key="polling_interval" android:entries="@array/entries_polling_interval"
            android:entryValues="@array/entryvalues_polling_interval" android:defaultValue="0"/>
    </PreferenceCategory>
</PreferenceScreen>
